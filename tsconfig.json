{
	"compilerOptions": {
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
